<!DOCTYPE html>
<html>
  <head>
      <title><%= title %></title>
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
      <script src="/javascripts/map.js" type="application/javascript"></script>
      <script src="/javascripts/places.js" type="application/javascript"></script>
      <script src="/javascripts/location.js" type="application/javascript"></script>
      <script src="/javascripts/init.js" type="application/javascript"></script>

  </head>
  <body>
  <!-- NAVIGATION BAR -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">The Date</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">Home</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">Report a bug</a></li>
        </ul>
      </div>
    </nav>
  <!-- Main Content -->
  <div class="container-fluid">
      <!-- Right menu-->
      <div class="col-md-4 col-lg-4" id="right-menu-container">
          <!-- Search Bar-->
          <form>
              <div class="form-group">
                  <label for="pairLoc">Pair location:</label>
                  <input id="pairLoc" type="text" for="pairLoc" placeholder="Enter a location" class="form-control"><br>
                  <label for="pairLoc">Own location:</label>
                  <input id="ownLoc" type="text" for="ownLoc" placeholder="Enter a location" class="form-control"><br>
				  

              </div>
          </form>
		  
		  <form class="form-inline">
				<div class="form-group">
					<label for="selType">Type of place:</label>
					<select class="form-control" id="selType">
						<option>bar</option>
						<option>restaurant</option>
						<option>park</option>
					</select>
				</div>&nbsp
				<div class="form-group" >
				  <label for="maxDist">Max distance:</label>
				  <input id="maxDist" type="text" for="maxDist" placeholder="2" class="form-control"> km
				</div>							
			  </form><br>
          <button class="btn-primary btn-lg" id="searchPlaces">Search!</button>
          
		  <ul class="list-group" id="right-menu-ul">
          </ul>
      </div>
      <!-- Map -->
      <div class="col-md-8 col-lg-8 embed-responsive embed-responsive-16by9">
          <div id="map" class="embed-responsive-item"></div>
      </div>
  </div>

  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB3FUDnVlbWERIbQ92-v6wAkjPmvVLOJBc&libraries=places&sensor=false" async defer></script>

  </body>
</html>
